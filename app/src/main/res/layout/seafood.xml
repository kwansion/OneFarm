<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient1"
        android:fitsSystemWindows="true"
        app:title="Seafood" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/fish"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="fish"
                android:background="@drawable/fish"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>

            <ImageButton
                android:id="@+id/squid"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="fish_1"
                android:background="@drawable/fish_1"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>

            <ImageButton
                android:id="@+id/oyster"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="oyster"
                android:background="@drawable/oyster"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>

            <ImageButton
                android:id="@+id/crab"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="crab"
                android:background="@drawable/crab"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>

            <ImageButton
                android:id="@+id/shrimp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="shrimp"
                android:background="@drawable/shrimp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylcerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</LinearLayout>