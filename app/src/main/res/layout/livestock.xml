<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient1"
        android:fitsSystemWindows="true"
        app:title="Livestock" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/chicken"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="chicken"
                    android:background="@drawable/chicken"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"/>

                <ImageButton
                    android:id="@+id/elephant"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="elephant"
                    android:background="@drawable/elephant"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"/>

                <ImageButton
                    android:id="@+id/rooster"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="rooster"
                    android:background="@drawable/rooster"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"/>

                <ImageButton
                    android:id="@+id/pig"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="pig"
                    android:background="@drawable/pig"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"/>

                <ImageButton
                    android:id="@+id/cow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="cow"
                    android:background="@drawable/cow"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylcerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


</LinearLayout>