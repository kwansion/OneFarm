<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fruit"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient1"
        android:fitsSystemWindows="true"
        app:title="Fruits" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/a1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="apple"
            android:background="@drawable/apple"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />

        <ImageButton
            android:id="@+id/a2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="lemon"
            android:background="@drawable/lemon"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>

        <ImageButton
            android:id="@+id/a3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="banana"
            android:background="@drawable/banana"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>

        <ImageButton
            android:id="@+id/a4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="grapes"
            android:background="@drawable/grapes"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>

        <ImageButton
            android:id="@+id/a5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="watermelon"
            android:background="@drawable/watermelon"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylcerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</LinearLayout>